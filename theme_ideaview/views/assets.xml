<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="idv_assets_frontend" name="Idea View style" inherit_id="website.assets_frontend">
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" type="text/scss" href="/theme_ideaview/static/src/scss/style.scss"/>
            </xpath>
        </template>
        <template id="idv_assets_primary_variables" name="Idea view SCSS variables" inherit_id="website._assets_primary_variables">
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" type="text/scss" href="/theme_ideaview/static/src/scss/primary_variables.scss"/>
            </xpath>
        </template>
        <template id="idv_assets_frontend_helpers" inherit_id="website._assets_frontend_helpers">
            <xpath expr="//link[last()]" position="after">
                <link rel="stylesheet" type="text/scss" href="/theme_ideaview/static/src/scss/bootstrap_overridden.scss"/>
            </xpath>
        </template>
    </data>
</odoo>